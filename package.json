		"@webcontainer/api": "1.3.0-internal.2",
		"@xterm/xterm": "^5.5.0",
		"lz-string": "1.5.0",
		"markuplint": "4.9.2",
		"monaco-editor": "0.50.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-split": "2.0.14",
		"semver": "7.6.3",
		"shiki": "^1.12.0",
		"strip-json-comments": "5.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
